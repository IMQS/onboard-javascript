{
	"compilerOptions": {
		"sourceMap": false,
		"strict": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es5",
		"typeRoots": [
			"./node_modules/@types"
		],
		"lib": [
			"dom",
			"es2016"
		],
		"outDir": "dist"
	},
	"include": [
		"./src/ts/*.ts"
	]
}
